# Demonstração do uso de for/range...
print("Digite o valor máximo desejado:")
NUMERO = int(input())

print("Segue, os números desejados:")
for X in range (0, NUMERO):
    print(X)

  #Porquê não foi impresso o valor desejado? 


  # Demonstração do uso de for/range...
print("Digite o nome desejado:")
NOME = input()

print("Vamos soletrar cada letra?")
for X in NOME:
    print(X)


    #Demonstração de uso while
    print("Digite o valor máximo desejado:")
    NUMERO = int(input())

    X = 0
    print("Segue, os números desejados:")
    while X < NUMERO:
        print(X)
        X = X + 1

        # Não foi impresso o número desejado...

        

